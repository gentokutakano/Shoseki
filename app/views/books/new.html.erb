<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        既読済み作成
      </h1>
    </div>
  </div>
</section>


<% if @book.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @book do |f| %>
          <div class="field">
            <%= f.label :title, "書籍名", class: "label" %>
            <%= f.text_field :title, class: "input is-success" %>
          </div>

          <div class="field">
            <%= f.label :body, "感想", class: "label" %>
            <%= f.text_area :body, :placeholder => "印象的に残ったことは？", class: "textarea is-success" %>
          </div>

          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.attachment_field :image, class: "input is-success" %>
          </div>

          <%= f.submit '投稿', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>